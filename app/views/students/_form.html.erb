<%= form_with(model: student, local: true) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :student_id %>
    <%= form.text_field :student_id %>
  </div>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.select(:gender, [ 'Male', 'Female' ], {}, { :class => 'select' }) %>
  </div>

  <div class="field">
    <%= form.label :klass_id %>
    <%#= form.text_field :klass_id %>
    <%= form.collection_select(:klass_id, Klass.all, :id, :name, :prompt => 'Select') %>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
