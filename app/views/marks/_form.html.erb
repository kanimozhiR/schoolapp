<%= form_with(model: mark, local: true) do |form| %>
  <% if mark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mark.errors.count, "error") %> prohibited this mark from being saved:</h2>

      <ul>
        <% mark.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :subject_id %>
    <%= form.collection_select(:subject_id, Subject.all, :id, :name, :prompt => 'Select') %>
  </div>

  <div class="field">
    <%= form.label :student_id %>
    <%= form.collection_select(:student_id, Student.all, :id, :name, :prompt => 'Select') %>
  </div>

  <div class="field">
    <%= form.label :mark %>
    <%= form.number_field :mark %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
